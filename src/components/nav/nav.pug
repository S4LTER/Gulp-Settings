mixin menuItem(item)
  - var activeClass = menuHref === item.link ? " is-active" : "";
  - item.subitems ? activeClass += "header__nav-item--parent" : null;
    li.header__nav-item(class= activeClass)
      if (item.hasLink == false)
        a(href= "#")= item.text
      else
        a(href= item.link + ".html")= item.text

      if block
        block

mixin navMenu(hasBurger = true)

  //- Takes on:
  //- hasBurger { true / false } - if set to true, then a burger menu appears at a certain width

  if (typeof(hasBurger) !== 'undefined' && hasBurger)
    nav.header__nav(data-burger-nav)
      ul.header__nav-list 
        each item in mainmenuData
          +menuItem(item)

            if (item.subitems)
              ul.header__nav-dropdown
                each subitem in item.subitems
                  +menuItem(subitem)
  else
    nav.header__nav
      ul.header__nav-list 
        each item in mainmenuData
          +menuItem(item)

            if (item.subitems)
              ul.header__nav-dropdown
                each subitem in item.subitems
                  +menuItem(subitem) 